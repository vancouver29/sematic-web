<div class="p-search dropdown" id="{{id}}">
	<a type="button" class="btn dropdown-toggle mobile-search-button" title="{{placeholder}}" href="#" aria-haspopup="true" aria-expanded="false" data-toggle="dropdown" ></a>
	<form class="navbar-form navbar-left dropdown-menu" role="search" autocomplete="off" action="{{action}}" method="{{method}}">
		<div class="form-group">
			<button type="submit" class="btn btn-default"><i class="p-search-icon"></i></button>
			{{#searchInput}}
				<input class="form-control" id="{{id}}" name="{{name}}" placeholder="{{placeholder}}" type="{{type}}">
			{{/searchInput}}
			{{#target}}
				<input value="{{page_name}}" name="title" type="hidden">
			{{/target}}
		</div>
	</form>
</div>
