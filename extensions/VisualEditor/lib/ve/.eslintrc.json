{
	"extends": [
		"wikimedia"
	],
	"env": {
		"browser": true,
		"jquery": true
	},
	"globals": {
		"ve": true,
		"VisualEditorSupportCheck": false,
		"OO": false,
		"unicodeJS": false,
		"RangeFix": false,
		"Papa": false
	},
	"rules": {
		"dot-notation": [ "error", { "allowKeywords": true } ],
		"max-len": 0
	},
	"plugins": [ "html" ],
	"settings": {
		"html/indent": "+tab",
		"html/report-bad-indent": "error"
	}
}
